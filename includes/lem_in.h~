#ifndef LEM_IN_H
# define LEM_IN_H

typedef struct	s_mem_block
{
	uint64_t	capacity;
	uint64_t	use;
	void		*block;
}				t_mem_block;

typedef struct	s_room
{
	char			*name;
	uint32_t		capacity;
	uint32_t		nbr_tube;
	struct s_room	**rooms;
}				t_room;

#endif
